{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/frontend/$1"
    },
    {
      "src": "/(.*)",
      "dest": "backend/app.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "ADMIN_USERNAME": "admin"
  },
  "functions": {
    "backend/app.py": {
      "memory": 512,
      "maxDuration": 30
    }
  }
}